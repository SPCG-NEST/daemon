{
  "name": "@spacemangaming/mcp-servers",
  "description": "MCP Servers for Daemon Framework",
  "author": "Spacemandev",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "bun build --target node --outdir dist src/index.ts",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:all": "bun run build && bun run build:types",
    "publish": "bun run build:all && bunx npm publish --access=public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@spacemangaming/daemon": "^0.1.7",
    "drizzle-orm": "^0.38.3",
    "litemcp": "^0.8.0",
    "nanoid": "^5.0.9",
    "postgres": "^3.4.5",
    "tweetnacl": "^1.0.3"
  }
}
